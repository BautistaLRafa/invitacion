  <script>
    function confirmarSi() {
      alert("Muchas gracias por confirmar. Nos alegra mucho que hagas parte de esta reunión. Puedes revisar la lista de regalos, pero no te preocupes, tu asistencia siempre será más valiosa para nosotros.");
      document.querySelector("form").reset();
    }

    function confirmarNo() {
      alert("Muchas gracias por confirmar. Sabemos que estarás de corazón con nosotros. ¡Un abrazo!");
      document.querySelector("form").reset();
    }
  </script>
